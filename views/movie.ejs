<%- include ./partials/head.ejs %>
<a class="back-btn" href="/movies">back</a>
<h2><%- movie.title %></h2>
<p class="overview"><%- movie.overview %></p>
<p class="rating">Rating: <span><%= movie.vote_average %></span></p>


<%
  if (movie.videos.length) {
  const video = movie.videos.find(video => video.type === 'Trailer') || movie.videos[0]
%>
    <h2><%= video.name %></h2>
    <div class="video">
        <iframe width="100%" height="800px" src="https://www.youtube-nocookie.com/embed/<%= video.key %>?modestbranding=1&autoplay=1&controls=0&fs=0&loop=1&rel=0&showinfo=0&disablekb=1&playlist=IsBInsOj8TY" frameborder="0"></iframe>
    </div>
<% } %>

<%- include ./partials/footer.ejs %>